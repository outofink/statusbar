#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted.
[ $(pamixer --get-mute) = true ] && echo "ï±" && exit

re='^[0-9]+$'
vol="$(pamixer --get-volume)"
while ! [[ $vol =~ $re ]]
do
    vol="$(pamixer --get-volume)"
done

if [ "$vol" -gt "66" ]; then
	icon="ï©½"
elif [ "$vol" -gt "33" ]; then
	icon="ï©¿"
elif [ "$vol" -gt "1" ]; then
	icon="ï©¾"
else
	icon="ïª€"
fi

echo "$icon $vol"
